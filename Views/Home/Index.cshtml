@{
    ViewBag.Title = "Contoso Comic Store";
}
<!-- ========== MAIN CONTENT ========== -->
<main id="content" role="main">
    <!-- Section -->
    <section class="space-top-2 space-bottom-1 position-relative bg-img-hero-center gradient-y-overlay-lg-white" style="background-image: url(~/assets/img/abstract-shapes-12.svg)">
        <div class="container pt-11 pt-lg-4">
            <div class="row justify-content-lg-between align-items-center mb-7">
                <div class="col-lg-4 mb-5 mb-lg-0 order-lg-2">
                    <div class="pl-lg-5"><img class="img-fluid w-md-50 w-lg-100" src="~/assets/svg-2/data-report.svg" alt="Image Description"></div>
                </div>

                <div class="col-lg-8 order-lg-1">
                    <!-- Info -->
                    <h1 class="h2 mb-3">Welcome to the analytics web app</h1>

                    <p class="lead">Here you have access to the latest sales and marketing information<br class="d-none d-xl-block"> about our e-commerce store.</p>
                    <!-- End Info -->
                </div>
            </div>
        </div>
    </section>
    <!-- End Section -->
    <!-- Section -->
    <section class="space-1">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-3 mb-lg-0">
                    <!-- Card -->
                    <a class="card h-100 text-reset" href="/Financials/Index">
                        <div class="w-sm-75 p-4">
                            <h3 class="h4">Financials</h3>
                            The screen shows attractive KPI's and interactive visuals to enhance financial business intelligence.
                        </div>

                        <div class="position-absolute bottom-0 right-0 w-sm-25 max-w-27rem">
                            <img class="img-fluid" src="~/assets/svg-2/growing-business.svg" alt="Image Description">
                        </div>
                    </a>
                    <!-- End Card -->
                </div>

                <div class="col-lg-6">
                    <!-- Card -->
                    <a class="card h-100 text-reset" href="/Campaigns/Index">
                        <div class="w-sm-75 p-4">
                            <h3 class="h4">Campaigns</h3>
                            The screen where you can choose which campaign to execute based on the Power BI Embedded interactive visuals available to you.
                        </div>

                        <div class="position-absolute bottom-0 right-0 w-sm-25 max-w-27rem">
                            <img class="img-fluid" src="~/assets/svg-2/events.svg" alt="Image Description">
                        </div>
                    </a>
                    <!-- End Card -->
                </div>
            </div>
        </div>
    </section>
    <!-- End Section -->
</main>
<!-- ========== END MAIN CONTENT ========== -->